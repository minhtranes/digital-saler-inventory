openapi: 3.0.0
info:
  version: 1.0.0
  title: Inventory
servers:
  - url: 'http://localhost:8080'
paths:
  /inventory:
    get:
      description: list all products
      summary: 'Sample endpoint: Returns details about products'
      operationId: listProduct
      tags:
        - product
      responses:
        '200':
          description: 'Sample response: Details about products'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ArrayOfProduct'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
    post:
      summary: 'Sample endpoint: Add details a product'
      operationId: insertOrUpdateProduct
      tags:
        - product
      requestBody:
        content:
            application/json:
              schema:
                $ref: '#/components/schemas/Product'
      responses:
        '200':
          description: 'Sample response: Update or insert a products sucessfully'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Product'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
    delete:
      summary: 'Sample endpoint: Add details a product'
      operationId: deleteProduct
      tags:
        - product
      requestBody:
        content:
            application/json:
              schema:
                type: object
                properties:                      
                  id:
                    description: ID of the product
                    type: integer
                    format: int64
      responses:
        '200':
          description: 'Sample response: delete a products sucessfully'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Product'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
  /inventory?id={id}:
    get:
      description: search a product by ID
      summary: 'Sample endpoint: Returns details about the product'
      operationId: searchProductByID
      parameters:
        - name: id
          in: query
          description: ID of the product
          required: true
          schema:
            type: long
            format: int64
      tags:
        - product
      responses:
        '200':
          description: 'Sample response: Details about the product'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Product'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
components:
  schemas:
    Product:
      type: object
      required:
        - id
        - name
        - importDateTime
        - price
        - unit
        - supplier
      properties:
        id:
          type: integer
          format: int64
          description: the internal ID, for manage behind the scence
          example: 12345
        productId:
          type: string
          description: the product id provied by the supplier
          example: SAD4556
        image:
          type: object
          properties:
            url:
              type: string
            width:
              type: integer
            height:
              type: integer
          default: null
          example:
            url: images/sample.png
            width: 100
            height: 100
        importDateTime:
          type: string
        name:
          type: string
          example: sand
        price:
          type: number
          example: 5.0
        quantity:
          type: integer
          default: 1.0
          example: 1.0
        unit:
          type: string
          example: tons
        discount:
          type : number
          example: -5.0
          default: 0.0
        tag:
          type: string
        supplierInfo: 
          type: object
          properties:
            supplierId:
              type: integer
              format: int64
              example: 1
            supplierName:
              type: string
              example: An Thinh
          required:
            - supplierId
            - supplierName
    ArrayOfProduct:
      type: array
      items:
        $ref: '#/components/schemas/Product'
    Error:
      type: object
      required:
        - code
        - message
      properties:
        code:
          type: integer
          format: int32
        message:
          type: string